{
  "compilerOptions": {
    "skipLibCheck": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2021",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "outDir": "dist",
    "lib": ["es2021"],
    "types": ["node", "jest"],
    "strict": true,
    "resolveJsonModule": true,
    "useUnknownInCatchVariables": false,
    "baseUrl": "."
  }
}
